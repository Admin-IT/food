<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.nf.food.food.label.dao.DifficultyDao">
    <resultMap id="difficulty" type="edu.nf.food.food.label.entity.Difficulty">
        <id property="id" column="menu_difficulty_id"/>
        <result property="name" column="menu_difficulty_name"/>
    </resultMap>
    <insert id="addDiffculty" parameterType="edu.nf.food.food.label.entity.Difficulty">
      insert into menu_difficulty(menu_difficulty_name)VALUES(#{name});
    </insert>
    <delete id="delDiffculty"  parameterType="edu.nf.food.food.label.entity.Difficulty">
      delete from menu_difficulty  where menu_difficulty_id = #{id}
    </delete>
    <select id="listDiffculty" resultMap="difficulty">
        select * from  menu_difficulty
    </select>


</mapper>